.container
  .row
    .col-md-2
    .col-md-8
      .panel.panel-default
        .panel-heading
          %h3.panel-title= t('project.add')

        =simple_form_for @project do |f|
          .panel-body
            .form-group
              =render 'form', f: f

          .panel-footer
            .form-actions.clearfix
              =f.submit t('project.add'), class: "btn btn-primary"