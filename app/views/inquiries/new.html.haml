.container
  .row
    .col-md-3
    .col-md-6
      =simple_form_for [ @project, @inquiry ] do |f|
        .panel.panel-default
          .panel-heading
            %h3.panel-title= t('inquiry.send')

          .panel-body
            .form-group
              =f.input :content

          .panel-footer
            .form-actions.clearfix
              =f.submit t('inquiry.send'), class: "btn btn-primary"
              =link_to t('cancel'), project_path(@project), class: "btn btn-default", role: 'button'
