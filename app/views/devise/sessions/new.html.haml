.container
  .row
    .col-md-3
    .col-md-6
      =simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .panel.panel-default
          .panel-heading
            %h3.panel-title= t('devise.sessions.new.sign_in')

          .panel-body
            .form-group
              =f.input :email, hint: ''
              =f.input :password, hint: ''

            %hr

            .form-group
              =link_to t('devise.shared.links.forgot_your_password'), new_password_path(:user), class: "btn btn-default btn-sm", role: 'button'
            .form-group
              =link_to t('devise.shared.links.didn_t_receive_confirmation_instructions'), new_user_confirmation_path(resource_name), class: "btn btn-default btn-sm", role: 'button'

          .panel-footer
            .form-actions.clearfix
              =f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary"

      .panel.panel-default
        .panel-heading
          %h3.panel-title= t('devise.registrations.new.sign_up')

        .panel-body
          .form-group
            %p= t('new_user_account_text')
            =link_to t('devise.registrations.new.sign_up'), new_user_registration_path, class: "btn btn-default", role: 'button'

          .form-group
            =render 'devise/shared/oauth_providers'
