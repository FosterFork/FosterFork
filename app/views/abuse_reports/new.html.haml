.container.main
  .row
    .col-md-3
    .col-md-6
      =simple_form_for [ @project, @abuse_report ] do |f|
        .panel.panel-default
          .panel-heading
            %h3.panel-title= t('abuse_report.report')

          .panel-body
            .form-group
              =f.input :reason

            -if Settings.recaptcha and not user_signed_in?
              .form-group
                =recaptcha_tags Settings.recaptcha.tag_options || {}

          .panel-footer
            .form-actions.clearfix
              =f.submit t('abuse_report.report'), class: "btn btn-primary"
              =link_to t('cancel'), project_path(@project), class: "btn btn-default", role: 'button'
